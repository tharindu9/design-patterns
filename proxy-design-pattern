package proxy;

/**
 
 *
 */

import java.util.*;

interface CarInterface {
    void driverCar();
}

class Car implements CarInterface{

    public void driverCar(){
        System.out.println( " be a polite driver ");
    }

}

class ProxyCar implements CarInterface {

    Driver driver;
    CarInterface car;
    ProxyCar(Driver driver){
        this.driver = driver;
        this.car = this;
    }

    @Override
    public void driverCar(){
        if(this.driver.age<18){
            System.out.println("you dnt have permission ");
        }
        else {
            System.out.println("Wellcome to the driving seat");
        }

    }
}

class Driver {

    int age;

    Driver(int age){
        this.age = age;
    }
}
public class Main {
    public static void main(String[] args) throws Exception {

        CarInterface car = new ProxyCar(new Driver(14));
        Scanner sc = new Scanner(System.in);
        car.driverCar();
    }
}
